        mc:Ignorable="d"
        Title="modificarProducto" Height="389.691" Width="442.783">
    <Grid>
        <TextBlock x:Name="EDITAR_producto_" HorizontalAlignment="Left" Margin="124,25,0,0" TextWrapping="Wrap" Text="EDITAR PRODUCTO " VerticalAlignment="Top" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.462,0.643"/>

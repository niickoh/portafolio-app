            <Label x:Name="lblEditID" Content="ID" HorizontalAlignment="Left" Margin="15,58,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" FontSize="14" FontWeight="Bold" Width="175" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="txtEditID" HorizontalAlignment="Left" Height="23" Margin="195,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="btnSalir" Content="SALIR" HorizontalAlignment="Left" Margin="141,233,0,0" VerticalAlignment="Top" Width="111" Click="btnSalir_Click" FontFamily="Century Gothic" FontSize="16" FontWeight="Bold" Height="40" Style="{mah:StaticResource MahApps.Styles.Button.MetroSquare.Accent}"/>


